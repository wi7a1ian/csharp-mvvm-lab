<UserControl x:Class="MvvmSampleApp.Controls.WithOwnVmControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmSampleApp.Controls"
             xmlns:myViewModels="clr-namespace:MvvmSampleApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <myViewModels:WithOwnVmControlViewModel x:Key="ViewModel" />
    </UserControl.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <StackPanel>
            <TextBlock FontSize="{Binding MyFontSize}" Name="someTB" Text="{Binding SampleText}" />
        </StackPanel>
    </Grid>
</UserControl>
